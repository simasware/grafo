    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
         if (JOptionPane.showConfirmDialog(this, "Você deseja limpar todo o grafo?") == JOptionPane.YES_OPTION) {
            ((JPanelGrafo) jPanel3).getGrafo().clearVertices();
            ((JPanelGrafo) jPanel3).repaint();
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        // TODO add your handling code here:
        if (((JPanelGrafo) jPanel3).getGrafo().isPlanar()) {
            JOptionPane.showMessageDialog(this, "Sim, este grafo é planar!");
        } else {
            JOptionPane.showMessageDialog(this, "Não, este grafo não é planar!");
        }
    }//GEN-LAST:event_jButton3ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        // TODO add your handling code here:
        if (((JPanelGrafo) Tab3).getGrafo().isConexo()) {
            JOptionPane.showMessageDialog(this, "Sim, este grafo é conexo!");
        } else {
            JOptionPane.showMessageDialog(this, "Não, este grafo não é conexo!\n\n"
                    + "SubGrafos:\n"
                    + ((JPanelGrafo) jPanel3).getGrafo().getSubGrafosConexosToString());
        }
    }//GEN-LAST:event_jButton4ActionPerformed

